<html>
    <head>
        <title>

        </title>
        <link rel="stylesheet"  href="/StyleSheets/allUsers.css" type="text/css" >
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link  href="/StyleSheets/cropper.css" rel="stylesheet">
        
    </head>
    <body>
         {{>header}}
        
            <div class="back-color">
                <div class="container">
                    <div class="row">
                        <div class="col-md-2"> </div>
                        <div class="col-md-8"> 
                            {{#each allUsers}}
                                <a href="/users/{{this.id}}">
                                    <div class="row profile-box">
                                        <div class="col-md-4 image ">
                                                <img  width="100%" height="100%" src="http://localhost:3000/user/{{this._id}}/avatar" alt="no image" />
                                        </div>
                                        <div class="col-md-8 block">
                                            <h5> {{this.first_name}} {{this.last_name}}</h5><hr>
                                            <h6>Age: 24</h6>
                                            <h6>Occupation: {{this.occupation}}</h6>
                                            <h6>Education: {{this.education}} </h6>
                                            <h6>Salary: {{this.salary}}</h6>
                                            <h6>Lives in: {{this.city}}</h6>
                                            <h6>From: {{this.native_place}}</h6>
                                        </div>
                                    </div>
                                {{/each}}
                        </div>
                        <div class="col-md-2"> </div>
                    </div>
                </div>
            </div>
        <script src="/js/cropper.js"></script>       
    </body>
</html>
